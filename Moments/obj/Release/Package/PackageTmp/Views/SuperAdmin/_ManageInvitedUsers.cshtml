@model  Moments.ViewModels.SuperAdminViewModel
<div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Invited Users</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="InvitedUsers" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>SerialNo</th>
                                <th>User Name</th>
                                <th>Email</th>
                                <th>Message</th>
                                <th>Registration Link</th>
                                <th>Allow Invitations</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PromotionEmailList != null)
                            {
                                int count = 1;
                                foreach (var loop in Model.PromotionEmailList)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@loop.UserFullName</td>
                                        <td>@loop.Email</td>
                                        <td>@loop.Message</td>
                                        <td>@loop.RegistrationLink</td>
                                        <td>@loop.AllowedInvitations</td>
                                        <td></td>
                                    </tr>
                                    count++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#InvitedUsers').DataTable();
    });
</script>